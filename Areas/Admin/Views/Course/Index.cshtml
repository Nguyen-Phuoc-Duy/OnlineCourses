@model List<Courses>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Courses</h2>
            </div>
        </div>
    </div>


    <div class="card-body p-3">
        <div class="row pb-2 mb-2">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Course" asp-action="Create" class="btn btn-info">
                    <i class="bi bi-plus-square"></i> Create New Courses
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-primary">
                    <th>Courses Id</th>
                    <th>Courses Name</th>
                    <th>Manipulate Data</th>
                </tr>
            </thead>
            <tbody>
                @* @foreach (var obj in Model.OrderByDescending(u => u.Id)) *@
                @foreach (var obj in Model)
                {
                    <tr class="table-light">
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Course" asp-action="Edit" class="btn btn-warning mx-2"
                                   asp-route-id="@obj.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Course" asp-action="Delete" class="btn btn-danger mx-2"
                                   asp-route-id="@obj.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>